<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    /* Your existing CSS styles here */
    @media screen and (min-width: 768px) {
    .mobile-menu-overlay {
      display: none;
    }

    .mobile-menu {
     display: none;
    }
    }
    @media screen and (max-width: 768px) {

      .mobile-menu-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh; /* Set height to 100vh for full-screen overlay */
      background-color: rgba(255, 255, 255, 0.9); /* White background with transparency */
      z-index: 1000; /* Ensure it appears on top of other content */
    }

    .mobile-menu {
      position: fixed;
      top: 0;
      right: 0;
      width: 70%; /* Adjust the width as needed */
      height: 100vh;
      background-color: #fff; /* Background color of the menu */
      z-index: 1001; /* Ensure it appears on top of the overlay */
      display: flex;
      flex-direction: column;
      padding: 20px;
    }

    .mobile-menu-toggle {
      cursor: pointer;
    }

    .bar {
      width: 25px;
      height: 3px;
      background-color: #333;
      margin: 4px 0;
      transition: 0.4s;
    }
      .desktop-menu {
        display: none;
      }
      .mobile-menu {
        display: none; /* Hide the mobile menu by default */
      }
      .mobile-menu-toggle {
        display: block; /* Show the hamburger menu toggle on small screens */
      }
      .mobile-menu.active {
        display: block; /* Show the mobile menu when active */
      }
      .mobile-menu-overlay.active {
        display: block; /* Show the overlay when mobile menu is active */
      }
    }
  </style>
</head>
<body>
  <nav class="navbar">
    <div class="container-navbar">
      <%= link_to root_path do %>
        <%= image_tag("logo-amaxan-bleu.jpg", alt: "logo-amaxan-bleu", id: "logo-amaxan-bleu") %>
      <% end %>
      <div class="mobile-menu-toggle">
        <div class="bar"></div>
        <div class="bar"></div>
        <div class="bar"></div>
      </div>
      <div class="mobile-menu-overlay"></div> <!-- Add the overlay -->
      <ul class="mobile-menu">
        <!-- Place your mobile menu items here -->
        <li><%= link_to "A Propos", root_path(anchor: 'apropos') %></li>
        <li><%= link_to "Expertises", root_path(anchor: 'expertises') %></li>
        <li><%= link_to "Méthodologie", root_path(anchor: 'methodologie') %></li>
        <%# <li><%= link_to "Mentions Légales", mentions_legales_path %>
        <li><%= link_to "Contact", root_path(anchor: 'contact') %></li>
      </ul>
      <ul class="desktop-menu">
        <!-- Place your desktop menu items here -->
        <li><%= link_to "A Propos", root_path(anchor: 'apropos') %></li>
        <li class="dropdown">
          <a href="#">Expertises</a>
          <ul class="dropdown-menu">
            <li><%= link_to "Famille", famille_path %></li>
            <li><%= link_to "Entrepreneurs & Professions Libérales", entrepreneurs_path %></li>
            <li><%= link_to "Assistance Administrative", assistance_administrative_path %></li>
            <li><%= link_to "Retraite", retraite_path %></li>
            <li><%= link_to "Placement", placement_path %></li>
            <li><%= link_to "Emprunt", emprunt_path %></li>
            <li><%= link_to "Impôts", impots_path %></li>
          </ul>
        </li>
        <li><%= link_to "Methodologie", root_path(anchor: 'methodologie') %></li>
        <%# <li><%= link_to "Mentions Légales", mentions_legales_path %>
        <li><%= link_to "Contact", root_path(anchor: 'contact') %></li>
      </ul>
    </div>
  </nav>
 <script>
  $(document).ready(function () {
    $(".mobile-menu-toggle").click(function () {
      $(".mobile-menu").toggleClass("active"); /* Toggle the mobile menu */
      $(".mobile-menu-overlay").toggleClass("active"); /* Toggle the overlay */
    });

    // Ajoutez ce gestionnaire d'événements pour les éléments du menu mobile
    $(".mobile-menu li a").click(function () {
      $(".mobile-menu").removeClass("active");
      $(".mobile-menu-overlay").removeClass("active");
    });
  });
</script>
</body>
</html>
