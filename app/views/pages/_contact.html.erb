$(document).ready(function() {
    $('#expertise').select2({
        placeholder: 'Veuillez sélectionner en cliquant', // Placeholder text
        allowClear: true, // Option to clear selection
        closeOnSelect: false, // Keep the dropdown open after selection
    });
});
</script>

</body>
</html>
